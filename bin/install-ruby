#!/usr/bin/bash

ENV_RUBY_VERSION=${1:-latest}

# https://rvm.io/

gpg --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3 7D2BAF1CF37B13E2069D6956105BD0E739499BDB
# Install RVM
curl -sSL https://get.rvm.io | bash -s stable

# . ~/.bashrc
# . ~/.profile
# .  ~/.rvm/scripts/rvm
echo '. /etc/profile.d/rvm.sh' >> ~/.bashrc
. /etc/profile.d/rvm.sh

/usr/local/rvm/bin/rvm install $ENV_RUBY_VERSION
/usr/local/rvm/bin/rvm alias create default $ENV_RUBY_VERSION