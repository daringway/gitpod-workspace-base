#!/usr/bin/bash

export ENV_AWS_CLI_VERSION=latest
export ENV_NODE_VERSION=latest
export ENV_YARN_VERSION=latest
export ENV_PYTHON_VERSION=latest
export ENV_AMPLIFY_CLI_VERSION=latest

env-install

function fail {
    echo $* 1>&2
    echo *** FAILED ***
    exit 1
}

. ~/.nvm/nvm.sh

for COMM in aws node yarn python3 amplify
do
    type $COMM || fail $COMM failed to install
done

echo *** PASSED ***